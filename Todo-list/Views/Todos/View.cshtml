@model Todo_list.Models.UpdateTodoViewModel
@{
}
<form method="post" action="View">
    <div class="form-group">
        <label for="">Id</label>
        <input type="text" class="form-control" asp-for="Id">
    </div>
    <div class="form-group">
        <label for="">Todo</label>
        <input type="text" class="form-control" asp-for="Task">
    </div>
    <div class="form-group">
        <label for="">Date</label>
        <input type="date" class="form-control" asp-for="Date">
    </div>
    <div class="form-group">
        <label for="">Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>

    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Todos">Delete</button>
</form>
